@page
@model EcoEnergyRazorProject.Pages.AfegirSimulacioModel
@{
	ViewData["title"] = "Afegir Simulació";
}
<h2>Crear Simulació</h2>
<form method="post">
	<div class="form-group">
		<label asp-for="Tipus">Tipus: </label>
		<select asp-for="Tipus" id="Tipus" required>
			<option value="" disabled selected>Selecciona una opcio</option>
			<option value="1">Solar</option>
			<option value="2">Hidroelectric</option>
			<option value="3">Eolic</option>
		</select>
	</div>
	<div class="form-group, d-sm-none" id="Solar">
		<label asp-for="SistemaSolar.HoresDeSol">Hores de Sol: </label>
		<input asp-for="SistemaSolar.HoresDeSol" class="form-control"/>
		<span asp-validation-for="SistemaSolar.HoresDeSol" class="text-danger"></span>
	</div>
	<div class="form-group, d-sm-none" id="Hidro">
		<label asp-for="SistemaHidroelectric.CabalAigua">Cabal de l'aigua: </label>
		<input asp-for="SistemaHidroelectric.CabalAigua" class="form-control" />
		<span asp-validation-for="SistemaHidroelectric.CabalAigua" class="text-danger"></span>
	</div>
	<div class="form-group, d-sm-none" id="Eolic">
		<label asp-for="SistemaEolic.VelocitatVent">Velocitat del vent: </label>
		<input asp-for="SistemaEolic.VelocitatVent" class="form-control" />
		<span asp-validation-for="SistemaEolic.VelocitatVent" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Rati">Rati: </label>
		<input asp-for="SistemaEnergia.Rati" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Rati" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Cost">Cost: </label>
		<input asp-for="SistemaEnergia.Cost" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Cost" class="text-danger"></span>
	</div>
	<div class="form-group">
		<label asp-for="SistemaEnergia.Preu">Preu: </label>
		<input asp-for="SistemaEnergia.Preu" class="form-control" />
		<span asp-validation-for="SistemaEnergia.Preu" class="text-danger"></span>
	</div>
	<button type="submit" class="btn btn-primary d-sm-none" id="Enviar">Afegir</button>
</form>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
	<script type="text/javascript" src="@Url.Content("js/OpcionsAfegirSimulacio.js")"></script>
}